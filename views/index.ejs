   <!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>BookList</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <section class="container">
      <h1>Add Book</h1>
      <form id="book-form" action="/messages" method="POST">
        <section>
          <label for="title">Title</label>
          <input type="text" id="title" class ="u-full-width" name="title" value="">
        </section>
        <section>
          <label for="author">Author</label>
          <input type="text" id="author" class ="u-full-width" name="author" value="">
        </section>
        <section>
          <label for="isbn">ISBN#</label>
          <input type="text" id="isbn" class ="u-full-width" name="isbn" value="">
        </section>
        <section>
          <input type="submit" class="u-full-width" name="submit" value="Submit">
        </section>
      </form>
      <table class="u-full-width">
        <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>ISBN</th>
        </tr>
        </thead>
      <% for(var i=0; i <messages.length; i++) {%>
        <tbody id="book-list" class="u-full-width">
          <td><%= messages[i].title %></td>
          <td><%= messages[i].author %></td>
          <td><%= messages[i].isbn %></td>
          <td class="delete" >X</td>
        </tbody>
      <% } %>
    </table>

    </section>
    <script type="text/javascript" src="js/app.js"></script>

  </body>
</html>
